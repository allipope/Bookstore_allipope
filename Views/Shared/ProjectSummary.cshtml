@{
}

@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-light p-1">
        <h4>
            @Model.Title
            <span class="badge bg-info" style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>

    <div class="card-text text-black-50 p-1">
        <ul>
            <li>@Model.Author</li>
            <li>@Model.Publisher</li>
            <li>@Model.Isbn</li>
            <li>@Model.Category</li>
            <li>@Model.PageCount</li>
        </ul>
    </div>

</div>