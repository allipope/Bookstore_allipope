@{
    ViewData["Title"] = "Home Page";
}
@model BooksViewModel

<h1>Online Bookstore</h1>

@foreach (Book b in Model.Books)
{
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded text-black-50 p-1">
        <h4>
            @b.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@b.Price.ToString("c")</small>
            </span>
        </h4>
    </div>

    <div class="card-text text-black-50 p-1">
        <ul>
            <li>@b.Author</li>
            <li>@b.Publisher</li>
            <li>@b.Isbn</li>
            <li>@b.Category</li>
            <li>@b.PageCount</li>
        </ul>
    </div>

</div>
}

<div page-blah="@Model.PageInfo" page-action="Index"
        page-class="button" page-class-normal="btn-outline-dark"
        page-class-selected="btn-primary" class="btn btn-group pull-right m-1">
</div>